					"name": "Test 1 - June 14 at 10:00 → PriceList 1, 35.50 EUR",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returns priceList 1 with price 35.50', function () {",
									"    var json = pm.response.json();",
									"    pm.expect(json.productId).to.eql(35455);",
									"    pm.expect(json.brandId).to.eql(1);",
									"    pm.expect(json.priceList).to.eql(1);",
									"    pm.expect(json.price).to.eql(35.50);",
